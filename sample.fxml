<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.10-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
          <Menu text="File">
              <MenuItem text="New" />
              <MenuItem text="Open" onAction="#onOpen" />
              <MenuItem text="Save" onAction="#onSave" />
              <MenuItem text="Save As" onAction="#onSaveAs" />
              <MenuItem text="Exit" onAction="#onExit" />
          </Menu>
          <Menu text="Edit">
              <MenuItem text="Undo" />
              <MenuItem text="Redo" />
              <MenuItem text="Cut" onAction="#onCut"/>
              <MenuItem text="Copy" onAction="#onCopy"/>
              <MenuItem text="Paste" />
              <MenuItem text="Delete" />
              <MenuItem text="Find" />
              <MenuItem text="Select All" onAction="#onSelect" />
          </Menu>
          <Menu text="Preferance">
                  <MenuItem text = "Settings" />
          </Menu>
          <Menu text="Help">
              <MenuItem text="About" />
          </Menu>
      </MenuBar>
   </top>

   <bottom>
      <HBox prefHeight="22.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </bottom>

   <center>
      <TextArea fx:id="areaText" prefHeight="346.0" prefWidth="583.0" BorderPane.alignment="CENTER" />
   </center>

</BorderPane>
